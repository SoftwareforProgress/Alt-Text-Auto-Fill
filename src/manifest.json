{
    "manifest_version": 3,
    "name": "Alt Text Auto-Fill",
    "version": "1.0.0",
    "description": "Automatically generates alt text for images to improve web accessibility. By Software for Progress Foundation.",
    "author": "Software for Progress Foundation",
    "homepage_url": "https://softwareforprogress.org",
    "permissions": ["activeTab", "storage", "contextMenus"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["styles.css"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        },
        "default_title": "Alt Text Auto-Fill - Software for Progress Foundation"
    }
}
